{
    "arrowParens": "always",
    "bracketSpacing": true,
    "parenSpacing": true,
    "printWidth": 500,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "endOfLine": "auto",
    "plugins": ["./node_modules/eslint-plugin-prettier"],
    "overrides": [
        {
            "files": ["*.json"],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": [
                "*.yaml",
                "*.yml"
            ],
            "options": {
                "singleQuote": false,
                "tabWidth": 2,
                "useTabs": false
            }
        }
    ]
}
